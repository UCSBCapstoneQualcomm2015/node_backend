extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Enter New Tag Information
					div.signup-wall
						form(class='form-group', action='/home', method='POST')
							input(type='text', name='tagId', class='form-control', placeholder='Tag ID',required, autofocus)
							input(type='text', name='reference', class='form-control nomargin', placeholder='Reference', required)
							input(type='text', name='location', class='form-control', placeholder='Location',required)
							input(type='text', name='readerId', class='form-control', placeholder='Reader ID',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Register
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}